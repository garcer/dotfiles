set realname = 'Cesare Gargano'
set my_server='mail.pgamma.com'
set my_user="$MAIL_USER"
set my_pw="$MAIL_PWD"
set from = "$my_user"
set spoolfile="imaps://$my_user:$my_pw@$my_server/INBOX"
set folder="imaps://$my_user:$my_pw@$my_server/INBOX"
set smtp_url="smtps://$my_user:$my_pw@$my_server"
set record="=Sent"
set postponed="=Drafts"
set trash="=Trash"
set ssl_starttls=yes
set ssl_force_tls=yes
unset imap_passive        
set imap_check_subscribed
set mail_check=1
set timeout=1
set header_cache="~/.mutt/.hcache.$my_user.$my_server"
set net_inc=1
set use_from=yes
