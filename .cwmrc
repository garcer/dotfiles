sticky yes
fontname "-misc-droid sans mono-medium-r-normal--*-*-*-*-*-*-*-*"

borderwidth 1

color activeborder rgb:90/90/90
color inactiveborder rgb:40/40/40

snapdist	10

bind-key M-1        grouponly1
bind-key M-2        grouponly2
bind-key M-3        grouponly3
bind-key M-4        grouponly4

bind-key MS-1       movetogroup1
bind-key MS-2       movetogroup2
bind-key MS-3       movetogroup3
bind-key MS-4       movetogroup3

bind-key CM-Return	xterm
bind-key CM-b	firefox
bind-key CMS-b	iridium
bind-key CMS-x	xombrero
bind-key CMS-p	mupdf
bind-key CMS-g	gimp
bind-key CMS-N	opennx
bind-key CMS-c	xcalc

bind-key CMS-t	"xterm -e \"top -s 1\""
bind-key CMS-s	"xterm -e \"doas systat -s 1\""

bind-key CM4S-d	"xbacklight -dec 20"
bind-key CM4S-l	"xbacklight -inc 20"
